@article{kazempour2022twitter,
  bibtex_show={true},
  title={Disseminating Information on Twitter: Evidence from Investment Advisory Firms},
  author={Kazempour, Seyed Mohammad},
  journal={Job Market Paper},
  year={2022},
  abstract={I show that investment advisory firms disseminate valuable information about stocks on their Twitter accounts. A one standard deviation increase in the sentiment of their tweets predicts a 12 bps increase in abnormal returns over the next week. Advisers' tweets interpret public news, especially analyst revisions and earnings announcements, and also disclose novel information. Furthermore, advisers can identify which recent trends in stock prices are overreactions. Advisers offering financial planning services post more informative tweets. Moreover, retail investors trade in the direction of tweets over the following week.},
  url={https://smkazempour.com/assets/pdf/jmp.pdf}
  }
  
@article{back2022validity,
